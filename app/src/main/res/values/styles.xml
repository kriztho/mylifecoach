<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />
    <style name="CollapsingTextAppearance" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    <style name="CollapsingTextAppearance.Inverse" >
        <item name="android:textSize">30sp</item>
    </style>
    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_back_arrow</item>
    </style>

    <style name="ToolbarWithCrossMark">
        <item name="navigationIcon">@drawable/ic_cross_mark</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="actionMenuTextColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorPrimary">@color/textColorPrimaryDark</item>
    </style>
    
    <style name="EditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:background">@color/colorBackground</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditFieldHeader" parent="EditField">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/textColorPrimaryDark</item>
        <item name="android:textColorHint">@color/textColorPrimaryDark</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EditSectionField" parent="EditField">
        <item name="android:layout_marginStart">35dp</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
    </style>

    <style name="EditSection">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="EditFieldImage">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="Hairline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorHairline</item>
    </style>

    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:colorAccent">@color/colorPrimary</item>
    </style>

</resources>
